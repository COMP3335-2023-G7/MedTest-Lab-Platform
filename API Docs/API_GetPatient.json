{
    "basePath": "/api",
    "endpoints": [
        {
            "method": "GET",
            "path": "/patient/{patient_id}",
            "description": "Endpoint to retrieve details of a specific patient.",
            "parameters": {
                "patient_id": "int - The unique identifier of the patient"
            },
            "successResponse": {
                "code": 200,
                "message": "Patient details retrieved successfully.",
                "data": {
                    "patientId": "int",
                    "name": "string",
                    "birthdate": "Date",
                    "contact": "string",
                    "insuranceDetails": "string"
                }
            },
            "errorResponses": [
                {
                    "code": 404,
                    "message": "Patient not found."
                },
                {
                    "code": 400,
                    "message": "Bad Request - Invalid patient ID."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        }
    ]
}
