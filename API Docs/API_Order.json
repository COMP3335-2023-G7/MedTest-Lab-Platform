{
    "basePath": "/api",
    "endpoints": [
      {
        "method": "GET",
        "path": "/orders?orderId=:orderId",
        "description": "Retrieve a specific order by its unique identifier.",
        "parameters": [
          {
            "name": "orderId",
            "required": true,
            "type": "integer"
          }
        ],
        "successResponse": {
          "code": 200,
          "message": "Order retrieved successfully.",
          "data": {
            "orderId": "integer",
            "appointmentId": "integer",
            "testCode": "string",
            "patientId": "integer",
            "orderStatus": "boolean",
            "details": "string"
          }
        },
        "errorResponses": [
          {
            "code": 404,
            "message": "Not Found - The specified order does not exist."
          },
          {
            "code": 500,
            "message": "Internal Server Error."
          }
        ]
      },
      {
        "method": "POST",
        "path": "/orders",
        "description": "Create a new order for a test.",
        "requestBody": {
          "appointmentId": "integer",
          "testCode": "string",
          "patientId": "integer",
          "staffId": "integer",
          "orderStatus": "boolean",
          "details": "string"
        },
        "successResponse": {
          "code": 201,
          "message": "Order created successfully.",
          "data": {
            "orderId": "integer"
          }
        },
        "errorResponses": [
          {
            "code": 400,
            "message": "Bad Request - Missing or invalid input parameters."
          },
          {
            "code": 409,
            "message": "Conflict - An order for this appointment already exists."
          },
          {
            "code": 500,
            "message": "Internal Server Error."
          }
        ]
      }
    ]
  }
  