{
    "basePath": "/api",
    "endpoints": [
        {
            "method": "POST",
            "path": "/tests",
            "description": "Create a new test in the test catalog.",
            "requestBody": {
                "name": "string",
                "description": "string",
                "cost": "decimal"
            },
            "successResponse": {
                "code": 201,
                "message": "Test created successfully.",
                "data": {
                    "testId": "int"
                }
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Missing or invalid input parameters."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "PUT",
            "path": "/tests?testId=:testId",
            "description": "Update an existing test in the test catalog.",
            "parameters": [
                {
                    "name": "testId",
                    "in": "path",
                    "description": "The ID of the test to update.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "requestBody": {
                "name": "string",
                "description": "string",
                "cost": "decimal"
            },
            "successResponse": {
                "code": 200,
                "message": "Test updated successfully."
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Missing or invalid input parameters."
                },
                {
                    "code": 404,
                    "message": "Not Found - The test with the given ID was not found."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        }
    ]
}