{
    "basePath": "/api",
    "endpoints": [
        {
            "method": "GET",
            "path": "/bills?billingId=:billingId",
            "description": "Retrieve a specific bill by its unique billing ID.",
            "parameters": [
                {
                    "name": "billingId",
                    "required": true,
                    "type": "string"
                }
            ],
            "successResponse": {
                "code": 200,
                "message": "Bill retrieved successfully.",
                "data": {
                    "billingId": "string",
                    "orderId": "string",
                    "patientId": "integer",
                    "amountDue": "decimal",
                    "dueDate": "string",
                    "paymentStatus": "boolean",
                    "insuranceClaimStatus": "string"
                }
            },
            "errorResponses": [
                {
                    "code": 404,
                    "message": "Not Found - The specified bill does not exist."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "POST",
            "path": "/bills",
            "description": "Create a new bill.",
            "requestBody": {
                "orderId": "string",
                "patientId": "integer",
                "amountDue": "decimal",
                "dueDate": "string",
                "paymentStatus": "boolean",
                "insuranceClaimStatus": "string"
            },
            "successResponse": {
                "code": 201,
                "message": "Bill created successfully.",
                "data": {
                    "billingId": "string"
                }
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Missing or invalid input parameters."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "PUT",
            "path": "/bills/?billingId=:billingId",
            "description": "Update an existing bill.",
            "parameters": [
                {
                    "name": "billingId",
                    "required": true,
                    "type": "string"
                }
            ],
            "requestBody": {
                "orderId": "string",
                "patientId": "integer",
                "amountDue": "decimal",
                "dueDate": "string",
                "paymentStatus": "boolean",
                "insuranceClaimStatus": "string"
            },
            "successResponse": {
                "code": 200,
                "message": "Bill updated successfully."
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Missing or invalid input parameters."
                },
                {
                    "code": 404,
                    "message": "Not Found - The specified bill does not exist."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        }
    ]
}