{
    "basePath": "/api",
    "endpoints": [
        {
            "method": "GET",
            "path": "/appointments",
            "description": "Retrieve a list of all appointments.",
            "parameters": [],
            "successResponse": {
                "code": 200,
                "message": "Appointments retrieved successfully.",
                "data": [
                    {
                        "appointmentId": "integer",
                        "patientId": "integer",
                        "date": "date",
                        "testCode": "string",
                        "orderStatus": "boolean"
                    }
                ]
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Invalid query parameters."
                },
                {
                    "code": 401,
                    "message": "Unauthorized - User not authorized to view appointments."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "POST",
            "path": "/appointments",
            "description": "Create a new appointment.",
            "requestBody": {
                "patientId": "integer",
                "date": "date",
                "testCode": "string",
                "orderStatus": "boolean"
            },
            "successResponse": {
                "code": 201,
                "message": "Appointment created successfully.",
                "data": {
                    "appointmentId": "integer"
                }
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Missing or invalid input parameters."
                },
                {
                    "code": 409,
                    "message": "Conflict - Appointment slot is not available."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "GET",
            "path": "/appointments?appointmentId=:appointmentId",
            "description": "Retrieve a specific appointment by its unique identifier.",
            "parameters": [
                {
                    "name": "appointmentId",
                    "required": true,
                    "type": "integer"
                }
            ],
            "successResponse": {
                "code": 200,
                "message": "Appointment retrieved successfully.",
                "data": {
                    "appointmentId": "integer",
                    "patientId": "integer",
                    "date": "date",
                    "testCode": "string",
                    "orderStatus": "boolean"
                }
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Invalid appointmentId parameter."
                },
                {
                    "code": 404,
                    "message": "Not Found - Appointment with the given ID does not exist."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        },
        {
            "method": "GET",
            "path": "/appointments?patientId=:patientId",
            "description": "Retrieve all appointments for a specific patient by their patient ID.",
            "parameters": [
                {
                    "name": "patientId",
                    "required": true,
                    "type": "integer"
                }
            ],
            "successResponse": {
                "code": 200,
                "message": "Appointments for the patient retrieved successfully.",
                "data": [
                    {
                        "appointmentId": "integer",
                        "date": "date",
                        "testCode": "string",
                        "orderStatus": "boolean"
                    }
                ]
            },
            "errorResponses": [
                {
                    "code": 400,
                    "message": "Bad Request - Invalid patientId parameter."
                },
                {
                    "code": 404,
                    "message": "Not Found - No appointments found for the specified patient."
                },
                {
                    "code": 500,
                    "message": "Internal Server Error."
                }
            ]
        }
    ]
}